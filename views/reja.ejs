<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>REJA</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
  </head>

  <body style="background-color: #b8bbd1">
    <div class="container">
      <h1 class="display-4 text-center py-1">REJA VA MAQSADLAR</h1>

      <div class="jumbotron p-3 shadow-sm">
        <form action="/create-item" id="create-form" method="POST">
          <div class="d-flex align-items-center">
            <input
              type="text"
              name="reja"
              id="create-field"
              autofocus
              autocomplete="off"
              class="form-constrol mr-3"
              style="flex: 1"
            />
            <button class="btn btn-primary" style="border-radius: 20px">
              Yangi Reja Qushish
            </button>
          </div>
        </form>
      </div>

      <!--  -->
      <ul id="item-list" class="list-group pb-5">
        <% items.map(function(item) { %>
        <li
          class="list-group-item list-group-item-info d-flex align-items-center justify-content-between"
        >
          <span class="item-text"> <%= item.reja %> </span>
          <div>
            <button
              data-id="<%=item._id%>"
              class="edit-me btn btn-secondary btn-sm mr-1"
            >
              O'zgartirish
            </button>
            <button
              data-id="<%=item._id%>"
              class="delete-me btn btn-danger btn-sm"
            >
              Ochirish
            </button>
          </div>
        </li>
        <% }) %>
      </ul>
      <button
        class="btn btn-primary"
        style="border-radius: 20px; background-color: red"
      >
        Hammasini Rejalarni O'chirish
      </button>
    </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="browser.js"></script>
  </body>
</html>
